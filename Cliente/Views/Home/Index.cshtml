@{
    ViewData["Title"] = "Panel de Control";
}

<div class="text-center mt-5">
    <h1 class="display-4">Bienvenido al Sistema de Gestión</h1>
    <p class="lead">Seleccione una categoría para administrar los registros.</p>

    <div class="row mt-5 justify-content-center">
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Gestión de Clientes</h5>
                    <p class="card-text text-muted">Administre la información de contacto y registros de sus clientes.</p>
                    <a asp-controller="Cliente" asp-action="Index" class="btn btn-primary btn-lg mt-auto">
                        <i class="bi bi-people"></i> Ir a Clientes
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Inventario de Productos</h5>
                    <p class="card-text text-muted">Controle el catálogo, precios y detalles de los productos disponibles.</p>
                    <a asp-controller="Producto" asp-action="Index" class="btn btn-success btn-lg mt-auto">
                        <i class="bi bi-box-seam"></i> Ir a Productos
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>